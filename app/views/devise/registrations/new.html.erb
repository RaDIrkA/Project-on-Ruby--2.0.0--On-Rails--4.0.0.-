<h3>Registrirajte se</h3>
<div class="row">
<div class="large-4 columns">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 <%= devise_error_messages! %>
   
   <div><%= f.label :email %></div>
   <%= f.email_field :email, :autofocus => true, :placeholder => "Vaš email" %>
      
   <div><%= f.label :password, "Geslo" %></div>
   <%= f.password_field :password, :placeholder => "Vaše geslo" %>

   <div><%= f.label :password_confirmation, "Potrditev gesla" %></div>
   <%= f.password_field :password_confirmation, :placeholder => "Ponovno vnesite vaše geslo" %>

   <div><%= f.submit "Registrirajte se" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div></div>