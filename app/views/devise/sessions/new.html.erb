<h3>Prijavite se</h3>
<div class="row">
<div class="large-4 columns">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	
  <div><%= f.label :email %></div>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Vaš email" %>

  <div><%= f.label :password, "Geslo" %></div>
  <%= f.password_field :password, :placeholder => "Vaše geslo" %>

  <% if devise_mapping.rememberable? -%>
  <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Zapomni se" %></div>
  <% end -%>

  <div><%= f.submit "Prijava" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>